<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_field :body %>
  </p>
  <p>
    <%= form.hidden_field :user_id, value: current_user.id %>
    <%= form.submit %>
  </p>
<% end %>
